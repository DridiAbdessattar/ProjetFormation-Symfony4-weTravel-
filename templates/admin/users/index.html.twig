{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Data Export</h4>
            <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF &amp; Print</h6>
            <div class="table-responsive m-t-40">
                <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Phone</th>

                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Phone</th>

                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>

                    {%  for user in users %}
                        <tr>
                            <td>{{ user.id}}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phone }}</td>

                            <td>
                                <a href="{{ path('admin_user_update',{id:user.id }) }}">Update</a>
                                <a href="{{ path('admin_user_delete', {id:user.id }) }}" onclick="return confirm('Sure ??')">Delete</a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>


{% endblock %}

