{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Data Export</h4>
            <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF &amp; Print</h6>
            <div class="table-responsive m-t-40">
                <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>vaoyage_id</th>
                        <th>Nom</th>
                        <th>soire_id</th>
                        <th>user_id</th>
                        <th>date</th>
                        <th>nbre_place</th>
                        <th>prix</th>
                        <th>date_creation</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>vaoyage_id</th>
                        <th>Nom</th>
                        <th>soire_id</th>
                        <th>user_id</th>
                        <th>date</th>
                        <th>nbre_place</th>
                        <th>prix</th>
                        <th>date_creation</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>

                    {%  for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.VaoyageOrganise}}</td>
                            <td>{{ reservation.id}}</td>
                            <td>{{ reservation.Soire}}</td>
                            <td>{% if reservation.user %} {{ reservation.user.Nom }} {% endif %}</td>
                            <td>{{ reservation.Date|date('d-m-y')}}</td>
                            <td>{{ reservation.NbrePlace}}</td>
                            <td>{{ reservation.prix}}</td>
                            <td>{{ reservation.DateCreation|date('d-m-y')}}</td>

                            <td>
                                <a href="{{ path('admin_reservation_update',{id:reservation.id }) }}">Update</a>
                                <a href="{{ path('admin_reservation_delete', {id:reservation.id }) }}" onclick="return confirm('Sure ??')">Delete</a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>


{% endblock %}

